<%- include("partials/header")%>
<div id="backgroundLogin">
  <form action="/login" method="POST" class="my-5 mx-5" id="login">
        <h1>Log In:</h1>
        <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label my-3">Username:</label>
            <div class="col-sm-10">
                <input
                type="text"
                id="username"
                name="username"
                placeholder="username"
                class="form-control my-2"
                />
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label my-3">Password:</label>
            <div class="col-sm-10">
                <input
                type="password"
                name="password"
                placeholder="password"
                id="password"
                class="form-control my-2"
                />
            </div>
        </div>
        <button class="btn btn-success my-3">Log In</button>
        <% if(error && error.length> 0) { %>
            <div class="alert alert-danger" role="alert">
                <div class="container"><%= error %></div>
            </div>
        <% } %>
    </form>
</div>

<%- include("partials/footer") %>
