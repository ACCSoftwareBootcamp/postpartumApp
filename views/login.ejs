<%- include("partials/header")%>
<div id="backgroundLogin" class="align-items-center justify-content-center">
  <form action="/login" method="POST" class="text-center" id="login">
        <h1>Log In:</h1>
        <p>Please enter your username and password</p>
        <div class="form-group row">
            <label for="username" class="form-label"></label>
            <div class="col-sm-10 mx-auto mb-2">
                <input
                type="text"
                id="username"
                name="username"
                placeholder="username"
                class="form-control"
                />
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="form-label"></label>
            <div class="col-sm-10 mx-auto mb-2">
                <input
                type="password"
                name="password"
                placeholder="password"
                id="password"
                class="form-control"
                />
            </div>
        </div>
        <button class="btn btn-success mt-2">Log In</button>
        <% if(error && error.length> 0) { %>
            <div class="alert alert-danger" role="alert">
                <div class="container"><%= error %></div>
            </div>
        <% } %>
    </form>
</div>

<%- include("partials/footer") %>
